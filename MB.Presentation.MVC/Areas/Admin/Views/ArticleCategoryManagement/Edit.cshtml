@model MB.ApplicationContract.ArticleCategory.EditArticleCategory
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        <h2>Edit Article Category: @Model.Title</h2>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <form asp-controller="ArticleCategoryManagement" asp-action="Edit" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="@Model.Id" />
                    <div class="col-md-6 col-sm-12">
                        <div class="form-group">
                            <label asp-for="@Model.Title" class="control-label">Title:</label>
                            <input asp-for="@Model.Title" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Edit" class="btn btn-warning" />
                        <a class="btn btn-dark" asp-area="Admin" asp-controller="ArticleCategoryManagement" asp-action="List">Back to list</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

